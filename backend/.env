# Development Environment Configuration
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# JWT Authentication Configuration
JWT_SECRET_KEY=  # Optional: defaults to SECRET_KEY if not set
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
DEFAULT_ADMIN_PASSWORD=admin123  # Change this in production!

# Error Tracking Configuration (Sentry)
SENTRY_DSN=  # Optional: add your Sentry DSN for error tracking
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Database Configuration
# Using PostgreSQL with psycopg (async driver)
DATABASE_URL=postgresql+psycopg://rag_user:rag_password@localhost:5432/rag_platform

# Database Connection Pool Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Vector Database Configuration
VECTOR_DB_PROVIDER=chroma

# ChromaDB Configuration (Docker Development)
CHROMA_HOST=localhost
CHROMA_PORT=8002

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536
CACHE_EMBEDDINGS=true
EMBEDDING_BATCH_SIZE=100

# Document Processing Configuration
MAX_FILE_SIZE=52428800
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNKING_STRATEGY=recursive

# Search Configuration
MAX_SEARCH_RESULTS=10
SIMILARITY_THRESHOLD=0.7

# Rate Limiting Configuration (more lenient for dev)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8001

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# CORS Configuration (allows all for development)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]